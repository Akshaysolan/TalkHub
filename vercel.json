{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(admin|api|static|media)/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "DJANGO_SETTINGS_MODULE": "chat_project.settings",
    "SECRET_KEY": "test-secret-key-for-vercel-123",
    "DEBUG": "True",
    "ALLOWED_HOSTS": "*"
  }
}